<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Personal_Budgeting"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:styling="using:FluentAvalonia.Styling"
             x:Class="Personal_Budgeting.App"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <styling:FluentAvaloniaTheme PreferSystemTheme="False" />
    </Application.Styles>

    <Application.Resources>
        <Color x:Key="SystemAccentColor">#007BFF</Color>
        <Color x:Key="SystemAccentColorDark1">#0056b3</Color>
        <Color x:Key="SystemAccentColorDark2">#003d80</Color>
        <Color x:Key="SystemAccentColorDark3">#00264d</Color>
        <Color x:Key="SystemAccentColorLight1">#3395ff</Color>
        <Color x:Key="SystemAccentColorLight2">#66afff</Color>
        <Color x:Key="SystemAccentColorLight3">#99c9ff</Color>
        
        <!-- Dark theme colors -->
        <Color x:Key="ApplicationBackgroundColor">#1A2526</Color>
        <Color x:Key="CardBackgroundColor">#22303D</Color>
        <Color x:Key="TextPrimaryColor">#FFFFFF</Color>
        <Color x:Key="TextSecondaryColor">#B0B0B0</Color>
    </Application.Resources>
</Application>