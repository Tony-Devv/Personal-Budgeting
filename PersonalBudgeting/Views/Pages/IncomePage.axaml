<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PersonalBudgeting.Views.Pages.IncomePage">
    <Panel>
        <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="20">
            <!-- Header -->
            <TextBlock Grid.Row="0" 
                    Text="Income Management" 
                    FontSize="24" 
                    FontWeight="Bold"
                    Margin="0,0,0,15"/>
          
            <!-- Summary Statistics -->
            <Grid Grid.Row="1" 
                ColumnDefinitions="*,*,*" 
                Margin="0,0,0,20">
                
                <!-- Total Income Card -->
                <Border Grid.Column="0" 
                        Background="#232323" 
                        CornerRadius="8"
                        Padding="15"
                        Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Total Income" 
                                FontWeight="SemiBold"/>
                        <TextBlock x:Name="TotalIncomeText" 
                                Text="$0.00" 
                                FontSize="20" 
                                FontWeight="Bold"
                                Margin="0,5,0,0"/>
                        <TextBlock Text="All Time"
                                Margin="0,5,0,0"
                                Opacity="0.7"/>
                    </StackPanel>
                </Border>
                
                <!-- Income Sources Card -->
                <Border Grid.Column="1" 
                        Background="#232323" 
                        CornerRadius="8"
                        Padding="15"
                        Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="Income Sources" 
                                FontWeight="SemiBold"/>
                        <TextBlock x:Name="IncomeSourcesText" 
                                Text="0" 
                                FontSize="20" 
                                FontWeight="Bold"
                                Margin="0,5,0,0"/>
                        <TextBlock Text="Active Sources" 
                                Margin="0,5,0,0"
                                Opacity="0.7"/>
                    </StackPanel>
                </Border>
                
                <!-- Add Income Card -->
                <Border Grid.Column="2" 
                        Background="#232323" 
                        CornerRadius="8"
                        Padding="15"
                        Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="New Income" 
                                FontWeight="SemiBold"/>
                        <Button x:Name="AddIncomeButton"
                            Content="+ Add Income" 
                            Margin="0,5,0,0"
                            Padding="10,5"
                            Background="#007BFF"
                            Foreground="White"
                            Click="OnAddIncomeClick"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Income History header -->
                <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,15">
                    <TextBlock Grid.Column="0" Text="Income History" FontSize="20" FontWeight="Bold"/>
                    <TextBox Grid.Column="1" x:Name="SearchBox" Width="250" Watermark="Search income..." 
                             TextChanged="OnSearchTextChanged" Margin="0,0,0,0"/>
                </Grid>
                
                <!-- Column Headers -->
                <Grid Grid.Row="1" ColumnDefinitions="2*,1*,1*,1*" Margin="0,0,0,10">
                    <TextBlock Grid.Column="0" Text="Income Source" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" Text="Amount" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="2" Text="Date" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="3" Text="Actions" FontWeight="SemiBold"/>
                </Grid>
                
                <!-- Income List -->
                <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="IncomeListPanel" Spacing="10"/>
                </ScrollViewer>
            </Grid>
        </Grid>
        
        <!-- Add Income Popup -->
        <Border x:Name="AddIncomePopup"
                Classes="AddIncomePopup"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Spacing="15">
                <TextBlock x:Name="AddIncomeTitle" 
                        Text="Add New Income"
                        FontSize="20"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,10"/>
                
                <TextBox x:Name="IncomeSourceInput"
                    Watermark="Income Source Name"
                    Margin="0,5"/>
                
                <TextBox x:Name="IncomeAmountInput"
                    Watermark="Amount ($)"
                    Margin="0,5"/>
                
                <DatePicker x:Name="IncomeDatePicker"
                        Margin="0,5"/>
                
                <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Spacing="10"
                        Margin="0,10,0,0">
                    <Button Content="Cancel" 
                        Click="OnCancelAddIncomeClick"/>
                    <Button x:Name="SaveIncomeButton" 
                        Content="Save" 
                        Background="#007BFF"
                        Foreground="White"
                        Click="OnSaveIncomeClick"/>
                </StackPanel>
                
                <TextBlock x:Name="AddIncomeErrorText"
                        Foreground="Red"
                        HorizontalAlignment="Center"
                        IsVisible="False"/>
            </StackPanel>
        </Border>
    </Panel>
    
    <UserControl.Styles>
        <Style Selector="Border.AddIncomePopup">
            <Setter Property="IsVisible" Value="False"/>
            <Setter Property="ZIndex" Value="1000"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BoxShadow" Value="0 4 12 0 #80000000"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Width" Value="350"/>
        </Style>
    </UserControl.Styles>
</UserControl>