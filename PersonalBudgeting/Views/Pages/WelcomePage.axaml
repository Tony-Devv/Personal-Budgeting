<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PersonalBudgeting.Views.Pages.WelcomePage">
    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="10" HorizontalAlignment="Center" Margin="0,20">
            <TextBlock Text="Personal Budget Manager" 
                     FontSize="32" 
                     HorizontalAlignment="Center"
                     Classes="Title"/>
            <TextBlock Text="Take control of your finances" 
                     FontSize="18" 
                     HorizontalAlignment="Center"
                     Classes="Subtitle"/>
        </StackPanel>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Spacing="20"
                    Width="400">
            <Button Content="Login" 
                    Classes="PrimaryButton"
                    Click="OnLoginClick"/>
            <Button Content="Sign Up" 
                    Classes="SecondaryButton"
                    Click="OnSignUpClick"/>
        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    HorizontalAlignment="Center" 
                    Margin="0,20">
            <TextBlock Text="Â© 2024 Personal Budget Manager" 
                     FontSize="12" 
                     HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
