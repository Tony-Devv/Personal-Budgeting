<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="PersonalBudgeting.Views.Pages.HomePage">
    <ScrollViewer>
        <StackPanel Spacing="20" Margin="20">
            <!-- Header with Welcome -->
            <StackPanel Spacing="5" Margin="0,0,0,10">
                <TextBlock x:Name="WelcomeMessage" 
                           Text="Welcome" 
                           FontSize="24" 
                           FontWeight="Bold"/>
                
                <TextBlock Text="Dashboard Overview" 
                           Opacity="0.7"
                           FontSize="16"/>
            </StackPanel>
            
            <!-- Summary Cards -->
            <Grid ColumnDefinitions="*,*,*" Margin="0,0,0,20" RowDefinitions="Auto">
                <!-- Income Card -->
                <Border Grid.Column="0" Classes="card" Margin="0,0,10,0">
                    <Grid RowDefinitions="Auto,*">
                        <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,10">
                            <PathIcon Data="{StaticResource ArrowUpIcon}" Foreground="#4CAF50" Width="16" Height="16"/>
                            <TextBlock Text="Total Income" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                            <TextBlock x:Name="TotalIncomeText" 
                                    Text="$0.00" 
                                    FontSize="24"
                                    FontWeight="Bold"
                                    Foreground="#4CAF50"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Expense Card -->
                <Border Grid.Column="1" Classes="card" Margin="5,0,5,0">
                    <Grid RowDefinitions="Auto,*">
                        <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,10">
                            <PathIcon Data="{StaticResource ArrowDownIcon}" Foreground="#F44336" Width="16" Height="16"/>
                            <TextBlock Text="Total Expenses" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                            <TextBlock x:Name="TotalExpensesText" 
                                    Text="$0.00" 
                                    FontSize="24"
                                    FontWeight="Bold"
                                    Foreground="#F44336"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Budget Card -->
                <Border Grid.Column="2" Classes="card" Margin="10,0,0,0">
                    <Grid RowDefinitions="Auto,*">
                        <StackPanel Orientation="Horizontal" Spacing="5" Margin="0,0,0,10">
                            <PathIcon Data="{StaticResource WalletIcon}" Foreground="#2196F3" Width="16" Height="16"/>
                            <TextBlock Text="Budget" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" VerticalAlignment="Center">
                            <TextBlock x:Name="TotalBudgetText" 
                                    Text="$0.00" 
                                    FontSize="24"
                                    FontWeight="Bold"
                                    Foreground="#2196F3"/>
                            <TextBlock x:Name="BudgetInfoText"
                                    Text="Available Balance"
                                    FontSize="14"
                                    Opacity="0.7"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Navigation Buttons -->
            <Grid ColumnDefinitions="*,*,*" Margin="0,20,0,0" RowDefinitions="Auto">
                <!-- Income Button -->
                <Button Grid.Column="0" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"
                        Margin="0,0,10,0"
                        Classes="nav income"
                        Click="OnIncomeNavigationClick">
                    <StackPanel>
                        <PathIcon Data="{StaticResource ArrowUpIcon}" Width="24" Height="24" Margin="0,0,0,5"/>
                        <TextBlock Text="Income" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Expenses Button -->
                <Button Grid.Column="1" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"
                        Margin="5,0,5,0"
                        Classes="nav expense"
                        Click="OnExpensesNavigationClick">
                    <StackPanel>
                        <PathIcon Data="{StaticResource ArrowDownIcon}" Width="24" Height="24" Margin="0,0,0,5"/>
                        <TextBlock Text="Expenses" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Budget Button -->
                <Button Grid.Column="2" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"
                        Margin="10,0,0,0"
                        Classes="nav budget"
                        Click="OnBudgetNavigationClick">
                    <StackPanel>
                        <PathIcon Data="{StaticResource WalletIcon}" Width="24" Height="24" Margin="0,0,0,5"/>
                        <TextBlock Text="Budget" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
