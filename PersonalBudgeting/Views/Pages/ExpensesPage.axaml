<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="PersonalBudgeting.Views.Pages.ExpensesPage">
    
    <Panel>
        <!-- Main Content -->
        <Grid RowDefinitions="Auto,Auto,*">
            <!-- Header Section -->
            <Grid Grid.Row="0" RowDefinitions="Auto,Auto" Margin="0,0,0,20">
                <TextBlock Grid.Row="0" x:Name="WelcomeMessage" Text="Welcome, User" 
                           FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <Grid Grid.Row="1" ColumnDefinitions="*,*,*" RowDefinitions="Auto" Margin="0,10,0,0">
                    <!-- Total Expenses Card -->
                    <Border Grid.Column="0" Margin="0,0,10,0" Classes="card">
                        <StackPanel>
                            <TextBlock Text="Total Expenses" FontSize="14" Opacity="0.7"/>
                            <TextBlock x:Name="TotalExpenseText" Text="$0.00" 
                                       FontSize="24" Foreground="#F44336" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Average Expense Card -->
                    <Border Grid.Column="1" Margin="10,0,10,0" Classes="card">
                        <StackPanel>
                            <TextBlock Text="Average Expense" FontSize="14" Opacity="0.7"/>
                            <TextBlock x:Name="AvgExpenseText" Text="$0.00" 
                                       FontSize="24" Foreground="#2196F3" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Add Expense Card -->
                    <Border Grid.Column="2" Margin="10,0,0,0" Classes="card">
                        <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center">
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Expense Categories" FontSize="14" Opacity="0.7"/>
                                <TextBlock x:Name="ExpenseCategoriesText" Text="0" 
                                           FontSize="24" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <Button Grid.Column="1" Content="+" 
                                    FontSize="18" 
                                    Width="40" Height="40" 
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Background="#4CAF50" 
                                    Foreground="White"
                                    Click="OnAddExpenseClick"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
            
            <!-- Expense History Section -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Expense History header -->
                <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,15">
                    <TextBlock Grid.Column="0" Text="Expense History" FontSize="20" FontWeight="Bold"/>
                    <TextBox Grid.Column="1" x:Name="SearchBox" Width="250" Watermark="Search expense..." 
                             TextChanged="OnSearchTextChanged" Margin="0,0,0,0"/>
                </Grid>
                
                <!-- Column Headers -->
                <Grid Grid.Row="1" ColumnDefinitions="2*,1*,1*,1*,1*,1*" Margin="0,0,0,10">
                    <TextBlock Grid.Column="0" Text="Expense Name" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" Text="Category" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="2" Text="Required" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="3" Text="Spent" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="4" Text="Date" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="5" Text="Actions" FontWeight="SemiBold"/>
                </Grid>
                
                <!-- Expense List -->
                <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ExpenseListPanel" Spacing="10"/>
                </ScrollViewer>
            </Grid>
        </Grid>
        
        <!-- Add Expense Popup -->
        <Border x:Name="AddExpensePopup" Classes="popup">
            <StackPanel Spacing="15">
                <TextBlock x:Name="AddExpenseTitle" 
                        Text="Add New Expense"
                        FontSize="20"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,10"/>
                
                <StackPanel Spacing="5">
                    <TextBlock Text="Expense Name"/>
                    <TextBox x:Name="ExpenseNameInput" Watermark="Enter expense name"/>
                </StackPanel>
                
                <StackPanel Spacing="5">
                    <TextBlock Text="Category"/>
                    <TextBlock Text="Selecting a category will set the required amount from your budget" 
                              FontSize="12" Opacity="0.7" Margin="0,0,0,4"/>
                    <ComboBox x:Name="ExpenseCategoryComboBox"
                              HorizontalAlignment="Stretch"
                              SelectedIndex="0">
                        <ComboBoxItem>Food</ComboBoxItem>
                        <ComboBoxItem>Rent</ComboBoxItem>
                        <ComboBoxItem>Utilities</ComboBoxItem>
                        <ComboBoxItem>Transportation</ComboBoxItem>
                        <ComboBoxItem>Entertainment</ComboBoxItem>
                        <ComboBoxItem>Healthcare</ComboBoxItem>
                        <ComboBoxItem>Education</ComboBoxItem>
                        <ComboBoxItem>Shopping</ComboBoxItem>
                        <ComboBoxItem>Personal Care</ComboBoxItem>
                        <ComboBoxItem>Other</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                
                <StackPanel Spacing="5">
                    <TextBlock Text="Required Amount"/>
                    <TextBox x:Name="RequiredAmountInput" Watermark="Enter required amount"/>
                </StackPanel>
                
                <StackPanel Spacing="5">
                    <TextBlock Text="Spent Amount"/>
                    <TextBox x:Name="ExpenseAmountInput" Watermark="Enter spent amount"/>
                </StackPanel>
                
                <StackPanel Spacing="5">
                    <TextBlock Text="Date"/>
                    <DatePicker x:Name="ExpenseDatePicker"/>
                </StackPanel>
                
                <StackPanel Spacing="5">
                    <TextBlock Text="Reminder Date (Optional)"/>
                    <DatePicker x:Name="ReminderDatePicker"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Spacing="10"
                        Margin="0,10,0,0">
                    <Button Content="Cancel" 
                        Click="OnCancelAddExpenseClick"/>
                    <Button x:Name="SaveExpenseButton" 
                        Content="Save" 
                        Classes="primary"
                        Click="OnSaveExpenseClick"/>
                </StackPanel>
                
                <TextBlock x:Name="AddExpenseErrorText"
                        Foreground="Red"
                        HorizontalAlignment="Center"
                        IsVisible="False"/>
            </StackPanel>
        </Border>
    </Panel>
    
    <UserControl.Styles>
    </UserControl.Styles>
</UserControl>
