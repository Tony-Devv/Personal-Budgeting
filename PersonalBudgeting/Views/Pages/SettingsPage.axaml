<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="650"
             x:Class="PersonalBudgeting.Views.Pages.SettingsPage">
    
    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20">
            <!-- Header -->
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                <TextBlock Grid.Column="0" 
                           Text="Settings" 
                           FontSize="28" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                
                         
            </Grid>
            
            <!-- User Profile Section -->
            <Border Classes="card">
                <Grid RowDefinitions="Auto,*" ColumnDefinitions="Auto,*" Margin="15">
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                               Text="User Profile"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>
                    
                    <!-- Profile Picture -->
                    <Border Grid.Row="1" Grid.Column="0"
                            Width="100" 
                            Height="100" 
                            CornerRadius="50"
                            Background="#333"
                            Margin="0,0,20,0">
                        <TextBlock Name="UserInitials"
                                   Text="JP"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="32"
                                   FontWeight="SemiBold"/>
                    </Border>
                    
                    <!-- Profile Info -->
                    <StackPanel Grid.Row="1" Grid.Column="1" Spacing="15">
                        <StackPanel Spacing="5">
                            <TextBlock Text="Name" FontSize="12" Opacity="0.7"/>
                            <TextBox Name="NameTextBox" Watermark="Your Name"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="5">
                            <TextBlock Text="Email" FontSize="12" Opacity="0.7"/>
                            <TextBox Name="EmailTextBox" Watermark="Your Email"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="5">
                            <TextBlock Text="Phone Number" FontSize="12" Opacity="0.7"/>
                            <TextBox Name="PhoneTextBox" Watermark="Your Phone Number"/>
                        </StackPanel>
                        
                        
                        <Button Content="Save Profile" 
                                Classes="accent"
                                Name="SaveSettingsButton"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Appearance Settings -->
            <Border Classes="card">
                <StackPanel Margin="15" Spacing="15">
                    <TextBlock Text="Appearance"
                               FontSize="18"
                               FontWeight="SemiBold"/>
                    
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" Margin="0,5">
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Theme" 
                                   VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" 
                                  Name="ThemeComboBox"
                                  Width="150">
                            <ComboBoxItem Content="Dark"/>
                            <ComboBoxItem Content="Light"/>
                            <ComboBoxItem Content="System Default"/>
                        </ComboBox>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="Accent Color" 
                                   VerticalAlignment="Center"
                                   Margin="0,15,0,0"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" 
                                  Name="AccentColorComboBox"
                                  Width="150"
                                  Margin="0,15,0,0">
                            <ComboBoxItem Content="Green"/>
                            <ComboBoxItem Content="Blue"/>
                            <ComboBoxItem Content="Purple"/>
                            <ComboBoxItem Content="Orange"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Notification Settings -->
            
            <!-- About Section -->
            <Border Classes="card">
                <StackPanel Margin="15" Spacing="5">
                    <TextBlock Text="About"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Personal Budget Manager" FontWeight="SemiBold"/>
                    <TextBlock Text="Version 1.0.0" Opacity="0.7"/>
                    <TextBlock Text="Â© 2023 All rights reserved" Opacity="0.7" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Logout Button -->
            <Border Classes="card">
                <StackPanel Margin="15" Spacing="15">
                    <TextBlock Text="Account"
                               FontSize="18"
                               FontWeight="SemiBold"/>
                    
                    <Button Name="LogoutButton" Content="Sign Out" 
                            HorizontalAlignment="Left"
                            Foreground="White" 
                            Background="#F64E60" 
                            Padding="15,10"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
