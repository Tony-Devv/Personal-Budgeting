<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Global Styles -->
    <Style Selector="Button.primary">
        <Setter Property="Background" Value="#4CAF50"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="#607D8B"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <Style Selector="Button.danger">
        <Setter Property="Background" Value="#F44336"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <Style Selector="DataGrid">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HorizontalGridLinesBrush" Value="#20FFFFFF"/>
    </Style>
    
    <Style Selector="ProgressBar.warning">
        <Setter Property="Foreground" Value="#FFC400"/>
    </Style>
    
    <Style Selector="ProgressBar.danger">
        <Setter Property="Foreground" Value="#FF5252"/>
    </Style>
    
    <Style Selector="Border.card">
        <Setter Property="Background" Value="#2A2A2A"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
        <Setter Property="BoxShadow" Value="0 2px 4px 0 #10000000"/>
    </Style>
    
    <Style Selector="TextBlock.h1">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>
    
    <Style Selector="TextBlock.h2">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>
    
    <Style Selector="TextBlock.h3">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    
    <Style Selector="TextBlock.label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="#B0B0B0"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>
    
    <Style Selector="TextBlock.value">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    <Style Selector="TextBlock.caption">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="#909090"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>
    
    <Style Selector="TextBox">
        <Setter Property="Background" Value="#2A2A2A"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#404040"/>
    </Style>
    
    <Style Selector="ComboBox">
        <Setter Property="Background" Value="#2A2A2A"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#404040"/>
    </Style>
    
    <Style Selector="DatePicker">
        <Setter Property="Background" Value="#2A2A2A"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#404040"/>
    </Style>
</Styles> 