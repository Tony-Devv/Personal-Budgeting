<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="Personal_Budgeting.Views.Pages.HomePage">

    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Dashboard" Classes="h1"/>

            <!-- Quick Stats -->
            <Grid ColumnDefinitions="*,*,*" Margin="0,0,0,20">
                <Border Classes="card" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Monthly Income" Classes="h2"/>
                        <TextBlock Text="$3,500.00" FontSize="24" 
                                 Foreground="{DynamicResource SystemAccentColor}"/>
                        <TextBlock Text="Last Month: $3,200.00" Opacity="0.7"/>
                    </StackPanel>
                </Border>
                
                <Border Classes="card" Grid.Column="1" Margin="10,0">
                    <StackPanel>
                        <TextBlock Text="Monthly Expenses" Classes="h2"/>
                        <TextBlock Text="$2,800.00" FontSize="24" Foreground="Red"/>
                        <TextBlock Text="14 transactions" Opacity="0.7"/>
                    </StackPanel>
                </Border>
                
                <Border Classes="card" Grid.Column="2" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Savings" Classes="h2"/>
                        <TextBlock Text="$700.00" FontSize="24" Foreground="Green"/>
                        <TextBlock Text="20% of income" Opacity="0.7"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Recent Transactions -->
            <Border Classes="card">
                <StackPanel>
                    <Grid ColumnDefinitions="*, Auto">
                        <TextBlock Text="Recent Transactions" Classes="h2"/>
                        <Button Grid.Column="1" Content="View All" Classes="accent"/>
                    </Grid>
                    
                    <DataGrid AutoGenerateColumns="False" IsReadOnly="True" 
                             Height="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Width="120"/>
                            <DataGridTextColumn Header="Description" Width="*"/>
                            <DataGridTextColumn Header="Category" Width="150"/>
                            <DataGridTextColumn Header="Amount" Width="120"/>
                            <DataGridTextColumn Header="Type" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Budget Overview -->
            <Border Classes="card">
                <StackPanel>
                    <TextBlock Text="Budget Overview" Classes="h2"/>
                    <Grid RowDefinitions="Auto,Auto,Auto" Margin="0,10">
                        <TextBlock Text="Monthly Budget Usage"/>
                        <ProgressBar Value="70" Maximum="100" Height="20" 
                                   Margin="0,10" Grid.Row="1"/>
                        <TextBlock Text="70% used - $2,800 of $4,000" 
                                 Grid.Row="2" HorizontalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>